#Auto Floating 
for_window [app_id="floating"] floating enable
for_window [app_id="pavucontrol"] floating enable
#
#Auto-executions
#
exec waybar
exec mako
exec lightcord
assign [class="^lightcord"] $ws3a
include /etc/sway/config.d/*
